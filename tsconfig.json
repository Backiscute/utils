{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2022",
        "outDir": "dist",
        "sourceMap": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": false,
        "skipDefaultLibCheck": false,
        "resolveJsonModule": true,
        "strictNullChecks": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
